<% if user_signed_in? %>
  <button type="button" id="btn_new_location">Start tracking</button>
  <button type="button" id="btn_stop_tracking">Stop tracking</button>
  <%= button_to 'Delete All Locations', delete_all_locations_path, method: :delete %>
  <div style='width: 800px;'>
    <div id="directions" style='width: 800px; height: 400px;'></div>
  </div>
